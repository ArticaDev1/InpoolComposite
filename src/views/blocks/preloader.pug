style.
  body {
  margin: 0; }
  .preloader {
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: var(--color-main-background);
  display: flex; }
  .preloader__icon {
  width: 60px;
  margin: auto;
  -webkit-animation: 0.5s ease-in fadeIn;
  animation: 0.5s ease-in fadeIn; }
  .preloader__item {
  opacity: 0;
  transition: .15s ease-in-out; }
  @-webkit-keyframes fadeIn {
  from {
  opacity: 0; }
  to {
  opacity: 1; } }
  @keyframes fadeIn {
  from {
  opacity: 0; }
  to {
  opacity: 1; } }

